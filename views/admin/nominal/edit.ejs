<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form ubah nominal "<%= nominal.coinName %>" </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label>Nama koin</label>
                        <select class="form-control select2" style="width: 100%;" name="coinName" required>
                          <option value="" disabled selected>Pilih koin</option>
                          <option value="Gold" <%= nominal.coinName === "Gold" ? 'selected' : '' %>>Gold</option>
                          <option value="Diamond" <%= nominal.coinName === "Diamond" ? 'selected' : '' %>>Diamond</option>
                          <option value="Jewel" <%= nominal.coinName === "Jewel" ? 'selected' : '' %>>Jewel</option>
                        </select>
                      </div>
                  
                      <div class="form-group">
                        <label for="coinQuantity">Jumlah koin</label>
                        <input type="number" value="<%= nominal.coinQuantity %>" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Masukkan jumlah koin" required>
                      </div>
                  
                      <div class="form-group">
                        <label for="price">Harga</label>
                        <input type="number" value="<%= nominal.price %>" name="price" class="form-control" id="price" placeholder="Masukkan harga" required>
                      </div>
                    </div>
                  
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </form>
                  
              </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
